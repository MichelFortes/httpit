{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema validation for Test Plan",
    "type": "object",
    "required": [
        "description"
    ],
    "properties": {
        "protocol": {
            "title": "HTTP Protocol",
            "type": "string",
            "examples": [
                "http",
                "https"
            ]
        },
        "host": {
            "title": "Target host",
            "type": "string",
            "examples": [
                "10.20.20.30",
                "localhost"
            ]
        },
        "port": {
            "title": "Target host",
            "type": "integer",
            "examples": [
                "10.20.20.30",
                "localhost"
            ]
        },
        "tests": {
            "title": "List of tests to run",
            "$ref": "#/definitions/test"
        }
    },
    "definitions": {
        "test": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "description": "description",
            "type": "object",
            "properties": {
                "description": {
                    "title": "Test Description",
                    "description": "",
                    "type": "string"
                },
                "method": {
                    "title": "HTTP method",
                    "description": "",
                    "examples": [ "GET", "POST" ],
                    "type": "string"
                },
                "path": {
                    "title": "Path",
                    "description": "",
                    "examples": [
                        "/customers"
                    ],
                    "type": "string"
                }
            }
        }
    }
}
